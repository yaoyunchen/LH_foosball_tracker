<div class="container custom-container-with-subnav">

<section class='section'>
  <div class='container'>
    <h1 class='title'>Record Match</h1>

    <div class="custom-select-winner">

      <% @result.each do |match| %>

        <% match[:left].each do |player| %>
          <figure class='custom-select-player'>
            <% if player[:img_path].nil? %>
              <img src="<%= player[:img_path] %>">
            <% else %>
              <img src="/images/avatar.png">
            <% end %>
          </figure>
          <p><%= player[:username] %></p>
        <% end %>
        <% match[:right].each do |player| %>
          <figure class='custom-select-player'>
            <% if player[:img_path].nil? %>
              <img src="<%= player[:img_path] %>">
            <% else %>
              <img src="/images/avatar.png">
            <% end %>
          </figure>
          <p><%= player[:username] %></p>
        <% end %>
        <div class='is-centered'>
        <form method="POST" action="/user/pending_matches/<%= match[:id] %>/choose_winner/edit">
          <input type="hidden" name="_method" value="put">

          <a class="button icon is-medium custom-circle-button" href="/user/pending_matches"><i class="fa fa-arrow-left"></i></a>

          <% winner = "" %>
   
          <button type="submit" name="team" value="<%= winner %>" class="button icon is-medium is-disabled custom-circle-button"><i class="fa fa-check"></i></button>
        </form>
      <% end %>
    </div>

  </div>
</section>


<%= erb :'_sub_nav' %>
</div>