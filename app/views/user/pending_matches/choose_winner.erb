<div class="container custom-container-with-subnav">

<section class='section'>
  <div class='container'>
    <h1 class='title'>Record Match</h1>

    <ul>
      <li class='media custom-media-profile'>
        <figure class='media-image'><img src='/images/player_03.jpg'></figure>
        <div class='media-content'>
          <p>Accepted at 11:20 am</p>
          <p>MikeIke</p>
        </div>
        <div data-match-id='99'>
          <a class="button icon is-medium custom-circle-button js-cancel-match"><i class="fa fa-times"></i></a>
          <a class="button icon is-medium custom-circle-button js-record-match"><i class="fa fa-check"></i></a>
        </div>
      </li>
    </ul>

  </div>
</section>


<%= erb :'_sub_nav' %>

</div>

<section class='section'>
  <div class='container'>
    <h1 class='title'>Select Winner</h1>

    <div class="custom-select-winner">

      <% @result[:left].each do |player| %>
        <figure class='custom-select-player'>
          <% p player %>
          <% if player[:img_path].nil? %>
            <img src="<%= player[:img_path] %>">
          <% else %>
            <img src="/images/avatar.png">
          <% end %>
        </figure>
        <p><%= player[:username] %></p>
      <% end %>
 
      <% @result[:right].each do |player| %>
        <figure class='custom-select-player'>
          <% if player[:img_path].nil? %>
            <img src="<%= player[:img_path] %>">
          <% else %>
            <img src="/images/avatar.png">
          <% end %>
        </figure>
        <p><%= player[:username] %></p>
      <% end %>
    </div>

    <div class='is-centered'>
      <form method="POST" action="/user/pending_matches/<%= @result[:id] %>/choose_winner/edit">
        <input type="hidden" name="_method" value="put">

        <a class="button icon is-medium custom-circle-button" href="/user/pending_matches"><i class="fa fa-arrow-left"></i></a>

        <% winner = "" %>
 
        <button type="submit" name="team" value="<%= winner %>" class="button icon is-medium is-disabled custom-circle-button"><i class="fa fa-check"></i></button>
      </form>
    </div>
  </div>
</section>