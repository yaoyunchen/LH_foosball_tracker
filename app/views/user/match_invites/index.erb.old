<h1>List of all them invites</h1>
------------------



<% @invite_hash_array.each do |invite| %>

  <p>
    <%= invite[:username] %>, 
    <%= invite[:category] %>
    <%", " + invite[:message] if invite[:message] %> 
     
    <form method="POST" action="/user/match_invites/<%= invite[:id]%>">
      <input type="hidden" name="_method" value ="put">

      <button type="submit" name="choice" value='true'> Accept </button>
      <button type="submit" name="choice" value='false'> Decline </button>
    </form>
  </p>
<% end %>


