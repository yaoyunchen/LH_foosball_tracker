<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Ratio</th>
      <th>Total Games</th>
    </tr>
  </thead>
  <tbody>
    <% @users.reverse.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.calc_wins %></td>
        <td><%= user.calc_losses %></td>
        <td><%= user.calc_ratio %></td>
        <td><%= user.calc_total_plays %></td>
      </tr>
    <% end %>
  </tbody>
</table>

