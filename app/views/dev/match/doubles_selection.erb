<div class="container custom-container-with-subnav">

<section class="section">
  <div class="container">

    <div class="container custom-start-game">
      <h1 class='title'>Create Match</h1>
      <div class="tabs is-toggle is-right">
        <ul>
          <li class='js-match-type' data-type='singles'><a>Singles</a></li>
          <li class='is-active js-match-type' data-type='doubles'><a>Doubles</a></li>
        </ul>
      </div>
    </div>

    <div class='content'>
      <form method='get'>
        <p class="control is-grouped">
          <input class="input" type="text" placeholder="Find players">
          <a class="button is-info">Search</a>
        </p>
      </form>
    </div>

    <div id='SelectedPlayers' class='notification custom-is-dark custom-add-players is-hidden'>
      <h5 class="title is-5 custom-teammate-title">Your teammate</h5>
      <ul class='js-selected-players custom-selected-players'>
      </ul>
      <form method='post'>
        <div class='is-centered'>
          <input type="hidden" name="user2" value="">
          <input type="hidden" name="user3" value="">
          <input type="hidden" name="user4" value="">
          <input type="hidden" name="teammate" value="">
          <button class='button is-disabled'>Send Invites</button>
        </div>
      </form>
    </div>

    <div class='content js-player-selection-list'>
      <ul>
        <li class='media custom-media-profile' data-player-id='1'>
          <figure class='media-image'><img src='/images/player_01.jpg'></figure>
          <div class='media-content'>
            <p>ColesoON</p>
            <div class='custom-media-profile-stats'>
              <span>12 W</span>
              <span>13 L</span>
              <span>48%</span>
            </div>
          </div>
          <div>
            <a class="button icon is-medium custom-circle-button is-hidden js-set-teammate" data-action='set'><i class="fa fa-arrow-up"></i></a>
            <a class="button icon is-medium custom-circle-button js-select-player" data-action='select'><i class="fa fa-plus"></i></a>
          </div>
        </li>

        <li class='media custom-media-profile' data-player-id='2'>
          <figure class='media-image'><img src='/images/player_02.jpg'></figure>
          <div class='media-content'>
            <p>NickBozzMan</p>
            <div class='custom-media-profile-stats'>
              <span>24 W</span>
